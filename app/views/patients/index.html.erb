<%- model_class = Patient.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.list', :model => model_class.model_name.human(:count => 9)) %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:card) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:age) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:hasscan) %></th>
      <th colspan="3">Последнее обращение</th>
      <th>Дата госп.</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.card %></td>
        <td><%= link_to patient.name, patient_path(patient) %></td>
        <td><%= patient.age %></td>
        <td><%= patient.address %></td>
        <td><%= patient.hasscan %></td>
        <td><%=l patient.lasttreatment.created_at, :format => :short %></td>
        <td><%= patient.lasttreatment.doctor.name %></td>
        <td><%= patient.lasttreatment.diagnosis.code %></td>
        <td><%=l patient.lasttreatment.plandate %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_patient_path(patient), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      patient_path(patient),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_patient_path,
            :class => 'btn btn-primary' %>
