<h1>Listing patients</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Card</th>
    <th>Address</th>
    <th>Ltreatment</th>
    <th>Hasscan</th>
    <th>Age</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @patients.each do |patient| %>
  <tr>
    <td><%= patient.name %></td>
    <td><%= patient.card %></td>
    <td><%= patient.address %></td>
    <td><%= patient.ltreatment_id %></td>
    <td><%= patient.hasscan %></td>
    <td><%= patient.age %></td>
    <td><%= link_to 'Show', patient %></td>
    <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
    <td><%= link_to 'Destroy', patient, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

