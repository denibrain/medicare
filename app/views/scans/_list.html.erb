<%- model_class = Scan.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<ul class="thumbnails">
  <% @scans.each do |scan| %>
    <li class="span2">
      <div class="thumbnail">
        <%= image_tag scan.scanbody.url(:thumb) %>
        <div class="padded">
          <h5><%= scan.name %></h5>
          <small class="gray">
            <%= scan.scantype.name %>, 
            <%=l scan.created_at, :format => :short %>

          </small>
        </div>
        <div class="padded">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_scan_path(scan), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      scan_path(scan),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </div>
      </div>
    </li>
  <% end %>
</ul>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_scan_path,
            :class => 'btn btn-primary' %>
