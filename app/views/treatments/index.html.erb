  <tr>
    <td><%= treatment.doctor_id %></td>
    <td><%= treatment.patient_id %></td>
    <td><%= treatment.complaints %></td>
    <td><%= treatment.anamnesis %></td>
    <td><%= treatment.diagnosis %></td>
    <td><%= treatment.tests %></td>
    <td><%= treatment.diagnosis_id %></td>
    <td><%= treatment.plandate %></td>
    <td><%= link_to 'Show', treatment %></td>
    <td><%= link_to 'Edit', edit_treatment_path(treatment) %></td>
    <td><%= link_to 'Destroy', treatment, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
